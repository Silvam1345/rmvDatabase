<body>
    <h1>Search Results (<%= clients.length %> found)</h1>
    <hr>
    <button class="btn btn-primary" style="margin-bottom: 1em;" onclick="history.back()">Back</button>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type of Service</th>
                <th>Vehicle Model</th>
                <th>Vehicle Cost</th>
                <th>Payment Type</th>
                <th>Service Status</th>
                <th>Missing Documents</th>
            </tr>
        </thead>
        <% if (clients==null || clients.length==0) {%>
            
            No clients found
        
        <% } else  if (clients.length>0) { %>
            <tbody>

                <% for (client of clients) {
                    %>
                    <tr class="mb-2">
                        <td>
                            <a href="/clients/show/<%= client['_id'] %>">
                            <%= client['first_name'] %>
                            <%= client['last_name'] %>
                            </a>
                        </td>
                        <td>
                            <%= client['type_of_service'] %>
                        </td>
                        <td>
                            <%= client['vehicle_model'] %>
                        </td>
                        <td>
                            <%= client['vehicle_cost'] %>
                        </td>
                        <td>
                            <%= client['payment_type'] %>
                        </td>
                        <td>
                            <%= client['service_status'] %>
                        </td>
                        <td>
                            <%= client['missing_docs'] %>
                        </td>

                    </tr>
                    <% } %>
                <% } %>
            </tbody>
    </table>
</body>